<UserControl x:Class="Shell_WebP_Converter.CustomElements.AdvancedPreset"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:properties="clr-namespace:Shell_WebP_Converter.Resources"
             mc:Ignorable="d">
    <Grid Margin="0,1,0,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition SharedSizeGroup="Col0"/>
            <ColumnDefinition SharedSizeGroup="Col1"/>
            <ColumnDefinition SharedSizeGroup="Col2"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition SharedSizeGroup="Col4"/>
            <ColumnDefinition SharedSizeGroup="Col5"/>
        </Grid.ColumnDefinitions>
        <ComboBox Name="ModSelectorComboBox" SelectedIndex="0" Grid.Column="0" MinWidth="80" SelectionChanged="ModSelectorComboBox_SelectionChanged" VerticalAlignment="Center" Height="20" Padding="6,1,5,3" Margin="0,0,2,0">
            <ComboBoxItem Content="{x:Static properties:Resources.ToNQuality}"></ComboBoxItem>
            <ComboBoxItem Content="{x:Static properties:Resources.ToNSize}"></ComboBoxItem>
            <ComboBoxItem Content="{x:Static properties:Resources.Customizable}"></ComboBoxItem>
        </ComboBox>
        <TabControl x:Name="SettingsTabControl" SelectedIndex="0" Grid.Column="1" VerticalAlignment="Center" Height="20" Margin="1,0,0,0">
            <TabControl.Template>
                <ControlTemplate TargetType="TabControl">
                    <ContentPresenter ContentSource="SelectedContent" />
                </ControlTemplate>
            </TabControl.Template>
            <TabItem>
                <StackPanel Orientation="Horizontal">
                    <TextBox Name="QualitySettingTextBox" ToolTip="{x:Static properties:Resources.QualityTooltip}" PreviewTextInput="QualitySettingTextBox_PreviewTextInput" Margin="0,0,2,0" MinWidth="48" Height="20"></TextBox>
                    <ComboBox Name="CompressionComboBox" ToolTip="{x:Static properties:Resources.CompressionTooltip}" Margin="0,0,2,0" SelectedIndex="4" Width="36" Height="20" Padding="6,2,5,3" >
                        <ComboBoxItem Content="0"/>
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                        <ComboBoxItem Content="6"/>
                    </ComboBox>
                </StackPanel>
            </TabItem>
            <TabItem>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="CompressionSizeThresholdTextBox" ToolTip="{x:Static properties:Resources.DesiredFileSize}" MaxLength="7" PreviewTextInput="CompressionThresholdTextBox_PreviewTextInput" Margin="0,0,2,0" VerticalContentAlignment="Center" Height="20" Width="48" Text="" PreviewKeyDown="CompressionThresholdTextBox_PreviewKeyDown"/>
                    <ComboBox x:Name="SizeMeasurmentUnitComboBox" HorizontalAlignment="Left" Width="53" Margin="0,0,2,0" SelectedIndex="1" Height="20" Padding="6,2,5,3">
                        <ComboBoxItem Content="{x:Static properties:Resources.KiB}"/>
                        <ComboBoxItem Content="{x:Static properties:Resources.MiB}" />
                    </ComboBox>
                </StackPanel>
            </TabItem>
            <TabItem HorizontalAlignment="Center" >
                <Label Content="——X——" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" FontSize="12" Margin="0,-4,0,0"/>
            </TabItem>
        </TabControl>
        <CheckBox Name="DeleteOriginalFileCheckBox" Grid.Column="2" Margin="0,0,1,0" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Name="PresetNameTextBox" Height="20" MaxLength="100" TextWrapping="NoWrap" Grid.Column="3" MinWidth="120" AcceptsReturn="False" Width="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=ColumnDefinitions[3].ActualWidth}" HorizontalContentAlignment="Left" Margin="2,0,3,0"></TextBox>
        <TextBox Name="PostfixNameTextBox" MinWidth="60" Grid.Column="4" Height="20" MaxLength="50" PreviewTextInput="PostfixNameTextBox_PreviewTextInput" TextWrapping="NoWrap" Width="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=ColumnDefinitions[4].ActualWidth}" HorizontalContentAlignment="Left" Margin="1,0,2,0"></TextBox>
        <Popup Name="WarningPopup"
           PlacementTarget="{Binding ElementName=PostfixNameTextBox}"
           Placement="Bottom"
           StaysOpen="False"
           AllowsTransparency="True"
           PopupAnimation="Fade">
            <Border Background="#404040" BorderBrush="#FF7E7E7E" BorderThickness="1" CornerRadius="10" Padding="5">
                <TextBlock Text="{x:Static properties:Resources.ForbiddenWindowsSymbols}" Foreground="White"/>
            </Border>
        </Popup>
        <StackPanel Orientation="Horizontal" Grid.Column="5" HorizontalAlignment="Center" Margin="1,0,2,0">
            <Button x:Name="MoveButton" Width="16" Height="16" Margin="0,0,0,0" MouseDown="MoveButton_MouseDown" MouseMove="MoveButton_MouseMove" MouseUp="MoveButton_MouseUp">
                <TextBlock Text="⇵"  FontFamily="Bold" TextAlignment="Center" Width="10" Height="10" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" FontWeight="Bold"/>
            </Button>
            <Button x:Name="DeleteButton" Width="16" Height="16" Margin="-2,0,0,0">
                <TextBlock Text="╳"  FontFamily="Bold" TextAlignment="Center" Width="10" Height="10" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8" FontWeight="Bold"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
