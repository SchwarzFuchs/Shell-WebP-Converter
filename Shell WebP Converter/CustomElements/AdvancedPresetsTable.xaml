<UserControl x:Class="Shell_WebP_Converter.CustomElements.AdvancedPresetsTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:custom="clr-namespace:Shell_WebP_Converter.CustomElements"
             xmlns:properties="clr-namespace:Shell_WebP_Converter.Resources"
             mc:Ignorable="d">
    <Border BorderBrush="#FF3A3A3A"  BorderThickness="1.5" CornerRadius="3" Margin="2,2,1,2" >
        <Grid MinWidth="600" MinHeight="200" Grid.IsSharedSizeScope="True" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="Col0" Width="Auto"/>
                <ColumnDefinition SharedSizeGroup="Col1" Width="Auto"/>
                <ColumnDefinition SharedSizeGroup="Col2" Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition SharedSizeGroup="Col4" Width="Auto"/>
                <ColumnDefinition SharedSizeGroup="Col5" Width="Auto"/>
                <ColumnDefinition SharedSizeGroup="Col6" Width="18"/>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="#FF3A3A3A" BorderThickness="1" Margin="0,-1,0,0" Width="1" HorizontalAlignment="Right"/>
            <Border BorderBrush="#FF3A3A3A" Grid.Column="1" BorderThickness="1" Margin="0,-1,0,0" Width="1" HorizontalAlignment="Right"/>
            <Border BorderBrush="#FF3A3A3A" Grid.Column="2" BorderThickness="1" Margin="0,-1,0,0" Width="1" HorizontalAlignment="Right"/>
            <Border BorderBrush="#FF3A3A3A" Grid.Column="3" BorderThickness="1" Margin="0,-1,0,0" Width="1" HorizontalAlignment="Right"/>
            <Border BorderBrush="#FF3A3A3A" Grid.Column="4" BorderThickness="1" Margin="0,-1,0,0" Width="1" HorizontalAlignment="Right"/>
            <Border BorderBrush="#FF3A3A3A" Grid.Column="0" Grid.ColumnSpan="6" BorderThickness="1" Margin="0,-1,0,0" Height="1" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
            </Border>
            <Border BorderBrush="#FF3A3A3A" Grid.Column="5" BorderThickness="5" Grid.RowSpan="3" Margin="0,-1,0,-1" Width="1" HorizontalAlignment="Right"/>
            <Label Content="{x:Static properties:Resources.Mode}" Grid.Column="0" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Content="{x:Static properties:Resources.Settings}" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Grid.Column="2" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                <TextBlock HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" MaxWidth="75" Text="{x:Static properties:Resources.DeleteOriginal}"></TextBlock>
            </Label>
            <Label Content="{x:Static properties:Resources.PresetName}" Grid.Column="3" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Content="{x:Static properties:Resources.Postfix}" Grid.Column="4" HorizontalAlignment="Center" Width="70" HorizontalContentAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Grid.Column="5" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" Text="{x:Static properties:Resources.Move_Delete}" FontSize="11" />
            </Label>
            <ScrollViewer Name="PresetsScrollViewer" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Height="250" MaxHeight="250" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="7" Margin="0,0,0,0">
                <Grid VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition SharedSizeGroup="Col0" Width="Auto"/>
                        <ColumnDefinition SharedSizeGroup="Col1" Width="Auto"/>
                        <ColumnDefinition SharedSizeGroup="Col2" Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition SharedSizeGroup="Col4" Width="Auto"/>
                        <ColumnDefinition SharedSizeGroup="Col5" Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Border BorderBrush="#FF3A3A3A" BorderThickness="1" Margin="0,-1,0,0" Width="1" HorizontalAlignment="Right"/>
                    <Border BorderBrush="#FF3A3A3A" Grid.Column="1" BorderThickness="1" Margin="0,-1,0,0" Width="1" HorizontalAlignment="Right"/>
                    <Border BorderBrush="#FF3A3A3A" Grid.Column="2" BorderThickness="1" Margin="0,-1,0,0" Width="1" HorizontalAlignment="Right"/>
                    <Border BorderBrush="#FF3A3A3A" Grid.Column="3" BorderThickness="1" Margin="0,-1,0,0" Width="1" HorizontalAlignment="Right"/>
                    <Border BorderBrush="#FF3A3A3A" Grid.Column="4" BorderThickness="1" Margin="0,-1,0,0" Width="1" HorizontalAlignment="Right"/>

                    <Grid Name="PresetsGrid" Grid.Row="0" VerticalAlignment="Top" Grid.ColumnSpan="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="Col0" Width="Auto"/>
                            <ColumnDefinition SharedSizeGroup="Col1" Width="Auto"/>
                            <ColumnDefinition SharedSizeGroup="Col2" Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition SharedSizeGroup="Col4" Width="Auto"/>
                            <ColumnDefinition SharedSizeGroup="Col5" Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <custom:AdvancedPreset Grid.Row="0" Grid.ColumnSpan="6"></custom:AdvancedPreset>
                        <custom:AdvancedPreset Grid.Row="1" Grid.ColumnSpan="6"></custom:AdvancedPreset>
                        <custom:AdvancedPreset Grid.Row="2" Grid.ColumnSpan="6"></custom:AdvancedPreset>
                        <custom:AdvancedPreset Grid.Row="3" Grid.ColumnSpan="6"></custom:AdvancedPreset>
                        <custom:AdvancedPreset Grid.Row="4" Grid.ColumnSpan="6"></custom:AdvancedPreset>
                    </Grid>
                    <Button Grid.Row="1" Content="+" Grid.ColumnSpan="6" Margin="2,0,2,2" Name="AddOneMoreEmptyPresetButton" Click="AddOneEmptyPreset_Click"></Button>
                </Grid>
                
            </ScrollViewer>
        </Grid>
    </Border>
    
</UserControl>

