<UserControl x:Class="Shell_WebP_Converter.CustomElements.ToggleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shell_WebP_Converter.CustomElements"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="150">
    <Grid x:Name="MainGrid" Background="Transparent" MouseLeftButtonDown="OnMouseLeftButtonDown">
        <Border x:Name="BackgroundBorder"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource AncestorType=UserControl}}"
                BorderBrush="Transparent"
                BorderThickness="0">
            <Border.Background>
                <SolidColorBrush x:Name="BackgroundBrush" Color="LightGray"/>
            </Border.Background>
            <Canvas>
                <Ellipse x:Name="Thumb"
                         Width="{Binding ActualHeight, ElementName=BackgroundBorder}"
                         Height="{Binding ActualHeight, ElementName=BackgroundBorder}"
                         Fill="{Binding ThumbColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                         Stroke="Transparent"
                         Canvas.Left="0"/>
            </Canvas>
        </Border>
    </Grid>
</UserControl>
